<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokemonListFragment">
    <!-- Pokemon List Fragment -->
    <fragment
        android:id="@+id/pokemonListFragment"
        android:name="com.example.pokemonapp.features.pokemon.presentation.list.PokemonListFragment"
        tools:layout="@layout/fragment_pokemon_list">

        <!-- Action to navigate to DetailFragment -->
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/pokemonDetailFragment" />
    </fragment>

    <!-- Pokemon Detail Fragment -->
    <fragment
        android:id="@+id/pokemonDetailFragment"
        android:name="com.example.pokemonapp.features.pokemon.presentation.details.PokemonDetailsFragment"
        tools:layout="@layout/fragment_pokemon_details">
        <argument
            android:name="pokemonName"
            app:argType="string" />
    </fragment>
</navigation>